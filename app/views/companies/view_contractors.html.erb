<h1>Органи за технически надзор, работещи за Вас</h1>

<br>

<% if flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>

<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Име</th>
      <th>Имейл</th>
      <th>Уникален номер на органа за надзор</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <% Current.user[:contractors].each do |contractor_number| %>
        <tr>
          <% contractor = User.find_by(company_number: contractor_number) %>
            <td><%= contractor[:name] %></td>
            <td><%= contractor[:email] %></td>
            <td><%= contractor[:company_number] %></td>
            <td><%= link_to "Покажи съоръжения", company_check_contractor_cranes_path(:contractor_number => contractor_number) %></td>
            <td><%= button_to "Премахване", destroy_contractors_path(contractor_number: contractor_number), method: :delete, data: { confirm: "Сигурни ли сте, че искате да премахнете #{contractor[:name]} от вашите органи за технически надзор?" } %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<%= link_to "Добавяне на орган за технически надзор", edit_contractors_path %>