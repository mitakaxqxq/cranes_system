<h1>Органи за технически надзор, с които работите</h1>

<br>

<% if flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>

<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Име</th>
      <th>Имейл</th>
      <th>Уникален номер на органа за надзор</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
      <% @contractors.each do |contractor| %>
        <tr>
          <td><%= contractor[:name] %></td>
          <td><%= contractor[:email] %></td>
          <td><%= contractor[:company_number] %></td>
          <td><%= link_to "Покажи съоръжения", company_check_contractor_cranes_path(:contractor_number => contractor[:company_number]), style: 'text-decoration: none'%></td>
          <td><%= button_to "Премахване", destroy_contractors_path(:contractor_id => contractor[:id]), method: :delete, data: { confirm: "Сигурни ли сте, че искате да премахнете #{contractor[:name]} от вашите органи за технически надзор?" }, style: 'text-decoration: none; background:none; border:none; color:#0d6efd' %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<%= link_to "Добавяне на орган за технически надзор", edit_contractors_path, class: "btn btn-dark" %>