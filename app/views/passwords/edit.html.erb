<h1>Промяна на парола</h1>
<% unless flash[:alert].nil? %>
    <div class="alert alert-danger" role="alert"><%= flash[:alert] %></div>
<% end %>
<%= form_with model: Current.user, url: edit_password_path do |form| %>
    <% if form.object.errors.any? %>
        <div class='alert alert-danger'>
            <% form.object.errors.full_messages.each do |message| %>
                <div><%= message %></div>
            <% end %>
        </div>
    <% end %>
    <div class='mb-3'>
        <%= form.label 'Нова парола' %>
        <%= form.password_field :password, class: 'form-control', placeholder: 'парола' %>
    </div>  
    <div class='mb-3'>
        <%= form.label 'Потвърдете новата парола' %>
        <%= form.password_field :password_confirmation, class: 'form-control', placeholder: 'парола' %>
    </div>
    <div class='mb-3'>
        <%= form.submit 'Промяна', class: 'btn btn-primary' %>
    </div>
<% end %>